<?xml version="1.0" encoding="UTF-8"?> 
 
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
 
 
<mapper namespace="persistencia.mappers.EspecieMapper">
	
 		<resultMap type="especie" id="rmEspecie">
 			<id column="ID_ESPECIE" property="id" jdbcType="INT"/>
 			<result column="DESCRIPCION" property="descripcion" jdbcType="VARCHAR"/>
 		</resultMap>
 		
 		<select id="getEspecies" resultMap="rmEspecie">
 			SELECT ID_ESPECIE, DESCRIPCION FROM ESPECIE
 		</select>
 
</mapper> 